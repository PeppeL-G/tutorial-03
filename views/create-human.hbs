<h1>Create human</h1>

{{#if validationErrors.length}}
	<p>Errors:</p>
	<ul>
		{{#each validationErrors}}
			<li>{{this}}</li>
		{{/each}}
	</ul>
{{/if}}

<form action="" method="POST">
	
	<div>
		Name: <input type="text" name="name">
	</div>
	
	<div>
		Age: <input type="number" name="age">
	</div>
	
	<input type="submit" value="Create Human">
	
</form>